#!/usr/bin/python
# -*- coding: utf-8 -*-


import argparse
import sys
import webbrowser


def main():
    rt_url_pattern = u'https://ssl.easter-eggs.fr/rt/Ticket/Display.html?id={ticket_number}'
    parser = argparse.ArgumentParser(description=u'Open RT ticket')
    parser.add_argument('ticket_number', help=u'The ticket number', type=int)
    args = parser.parse_args()
    webbrowser.open(url=rt_url_pattern.format(ticket_number=args.ticket_number))
    return 0


if __name__ == '__main__':
    sys.exit(main())
